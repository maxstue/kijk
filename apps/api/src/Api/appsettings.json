{
  "Auth": {
    "Authority": "<from user-secrets or environment variable>",
    "AuthorizedParty": "<from user-secrets or environment variable>"
  },
  "OpenApi": {
    "Token": "<from user-secrets or environment variable>"
  },
  "AllowedHosts": "*",
  "Cors": ["http://localhost:5004", "https://kijk-app.justmax.xyz"],
  "Serilog": {
    "LevelSwitches": {
      "ConsoleSwitch": "Information"
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '%openapi%'"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '%scalar%'"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '%/favicon%'"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestMethod like '%OPTIONS%'"
        }
      }
    ],
    "Using": ["Serilog.Sinks.Console", "Serilog.Expressions"],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}] [{Level:u4}] [{SourceContext}] {CorrelationId} {Message}{NewLine}{Exception}",
          "levelSwitch": "$ConsoleSwitch"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  }
}
